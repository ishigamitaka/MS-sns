<h1>会員一覧</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>氏名</th>
      <th>ニックネーム</th>
      <th>メールアドレス</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.last_name %><%= user.first_name %></td>
        <td><%= user.nickname%></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to "編集", edit_user_path(user.id) %>
          <%= link_to "削除", user_path(user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
        <% if current_user.admin? %>
          <%= link_to "管理者用削除ボタン", user_path(user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>