<div class="container" style="background-image: url('/assets/サーキットレース.jpg');">
  <div class="py-5">
    <div class="row justify-content-center">
      <div class="col-md-6">
        <h1 class="text-center text-white">イベント編集</h1>

        <%= form_for @event do |f| %>
          <div class="form-group text-white">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :location, "場所" %>
            <%= f.text_field :location, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :run_category, "走行カテゴリー" %>
            <%= f.select :run_category, [["レース", "レース"], ["タイムアタック", "タイムアタック"], ["ドリフト", "ドリフト"], ["ジムカーナ", "ジムカーナ"]], { include_blank: "カテゴリーを選択してください" }, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :run_date, "開催日" %>
            <%= f.text_field :run_date, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :due_date, "申し込み期限日" %>
            <%= f.text_field :due_date, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :price, "参加費" %>
            <%= f.text_field :price, class: "form-control" %>円
          </div>

          <div class="form-group text-white">
            <%= f.label :payment_method, "支払方法" %>
            <%= f.select :payment_method, [["銀行振込", "銀行振込"], ["現地払い", "現地払い"]], { include_blank: "支払い方法を選択してください" }, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :number_people, "募集人(台)数" %>
            <%= f.text_field :number_people, class: "form-control" %>人(台)
          </div>
          
          <div class="form-group text-white">
            <%= f.label :contact_address, "主催連絡先（電話番号、メールアドレス等）" %>
            <%= f.text_field :contact_address, class: "form-control" %>
          </div>

          <div class="form-group text-white">
            <%= f.label :body, "詳細" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>

          <%= f.submit "更新する", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>