<div class="container registnew">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-center text-white">会員登録</h1>

      <%= form_with model: @user, url: user_registration_path, method: :post do |form| %>
        <div class="form-group text-white">
          <%= form.label :email %>
          <%= form.email_field :email, class: "form-control" %>
        </div>
        
        <div class="form-group text-white">
          <%= form.label :password_6characters %>
          <%= form.password_field :password, class: "form-control" %>
        </div>
        
        <div class="form-group text-white">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        
        <div class="form-group text-white">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        
        <div class="form-group text-white">
          <%= form.label :nickname %>
          <%= form.text_field :nickname, class: "form-control" %>
        </div>
        
        <div class="text-center">
          <%= form.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>

      <%= render "public/shared/links" %>
    </div>
  </div>
</div>