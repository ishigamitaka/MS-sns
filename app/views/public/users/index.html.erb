<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <% if admin_signed_in? %>
            <th>氏名</th>
            <% end %>
            <th>ユーザーネーム</th>
            <% if admin_signed_in? %>
            <th>メールアドレス</th>
            <% end %>
            <th>愛車</th>
            <th></th>
            <th>メインサーキット</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <% if admin_signed_in? %>
                <td><%= user.id %></td>
                <td><%= user.last_name %><%= user.first_name %></td>
              <% end %>
              <td>
                <%= link_to user.nickname, user_path(user.id) %>
              </td>
              <% if admin_signed_in? %>
                <td><%= user.email %></td>
              <% end %>
              <td><%= user.mycar %></td>
              <td>
                <% if user.mycar_image.attached? %>
                  <%= image_tag user.mycar_image, size: "100x80" %>
                <% end %>
              </td>
              <td><%= user.main_circuit %></td>
              <td>
                <% if admin_signed_in? %>
                  <%= link_to "管理者用削除ボタン", user_path(user.id), method: :delete, data: { confirm: "本当に削除しますか？" } %>
                  <%= link_to "編集", edit_user_path(user.id) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>